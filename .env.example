# ============================================
# DATABASE CONFIGURATION
# ============================================
database_hostname=localhost
database_port=5432
database_password=your_password_here
database_name=postgres
database_username=postgres

# ============================================
# JWT AUTHENTICATION
# ============================================
secret_key=your_secret_key_here_change_this_in_production
algorithm=HS256
access_token_expire_minutes=60

# ============================================
# STRIPE PAYMENT (Optional - for payment features)
# ============================================
# Get keys from: https://dashboard.stripe.com/test/apikeys
Stripe_Public_Key=pk_test_your_stripe_public_key_here
Stripe_Secret_Key=sk_test_your_stripe_secret_key_here

# ============================================
# AES ENCRYPTION KEYS (REQUIRED - MUST GENERATE)
# ============================================
# Generate using this command:
#
# Windows (PowerShell):
#   python -c "import secrets, base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"
#
# Linux/Mac:
#   python3 -c "import secrets, base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"
#
# Example output: yAJCYEC/1yTdfgnBlSKXk5F84gyS03LJRSrW20+zLGg=
#
Key_AES=REPLACE_WITH_YOUR_GENERATED_KEY
USER_AES_KEY=REPLACE_WITH_YOUR_GENERATED_KEY

# ============================================
# OPTIONAL: HSM/PKCS11 (for hardware security modules)
# ============================================
# SOFTHSM_LIB=/usr/lib/softhsm/libsofthsm2.so
# TOKEN_LABEL=MyToken1
# USER_PIN=890844
# HSM_RSA_BITS=2048
